{
    "compilerOptions": {
        "strict": true,
        "target": "es5",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "sourceMap": true,
        "declaration": true,
        "outDir": "../dist",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            },
            {
                "transform": "typescript-transform-paths",
                "afterDeclarations": true
            }
        ],
    }
}